<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doctor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.doctor.update_patient" />
        <activity android:name="com.example.doctor.logindoc" />
        <activity android:name="com.example.doctor.AddPrescriptionsActivity" />
        <activity android:name="com.example.doctor.ViewVisitActivity" />
        <activity
            android:name="com.example.doctor.PatientProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.doctor.AddVisitActivity" />
        <activity
            android:name="com.example.doctor.updatepassword"
            android:parentActivityName="com.example.doctor.Main2Activity" />
        <activity android:name="com.example.doctor.forgotpass" />
        <activity android:name="com.example.doctor.Main2Activity" />
        <activity android:name="com.example.doctor.PatientRegisterFormActivity" />
        <activity
            android:name="com.example.doctor.splashscreen"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.doctor.register" />
    </application>

</manifest>